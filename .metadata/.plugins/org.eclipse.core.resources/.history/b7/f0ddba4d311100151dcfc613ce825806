package hw3;

import java.util.Scanner;

public class P464E5 {
	private String description;
	private int rating;
	
	public P464E5(String description) {
		this.description = description;
		this.rating = 0;
	}
	
	private boolean isValid(int rating) {
		if (rating > 10 || rating < 1) {
			return false;
		} else {
			return true;
		}
	}
	
	public void setRating() {
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("Please enter a rating: ");
		while(!scanner.hasNextInt() || !isValid(scanner.nextInt())) {
			System.out.print("Invalid integer. Please try again: ");
			scanner.next();
		}
		
		this.rating = scanner.nextInt();
		
		System.out.println(this.rating);
	}
}
