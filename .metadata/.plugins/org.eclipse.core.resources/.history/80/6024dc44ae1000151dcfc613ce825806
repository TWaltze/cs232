package hw3;

import java.util.Scanner;

public class P361P3 {
	public static double quizOne;
	public static double quizTwo;
	public static double midterm;
	public static double finalExam;
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Please enter the student's first quiz: ");
		quizOne = scanner.nextDouble();
		
		System.out.println("Please enter the student's second quiz: ");
		quizTwo = scanner.nextDouble();
		
		System.out.println("Please enter the student's midterm: ");
		midterm = scanner.nextDouble();
		
		System.out.println("Please enter the student's final exam: ");
		finalExam = scanner.nextDouble();
		
		System.out.println("The student's final grade is " + finalGrade());
	}
	
	public static double finalGrade() {
		double quizScore = (quizOne * .125) + (quizTwo * .125);
		double midtermScore = midterm * .25;
		double finalScore = finalExam * .5;
		
		return quizScore + midtermScore + finalScore;
	}
}
