package hw4;

import java.util.Scanner;

public class OperatorSelector {
	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		
		showMenu();
		
		
	}
	
	public static void showMenu() {
		System.out.println("Select a command below:");
		System.out.println("-1. Exit Program");
		System.out.println(" 0. Show Help");
		System.out.println(" 1. Multiplication");
		System.out.println(" 2. Division");
		System.out.println(" 3. Subtraction");
		System.out.println(" 4. Addition");
		System.out.print("Please make a selection: ");
	}
	
	public static int[] gatherInputs(int numberOfInputs) {
		int[] numbers = new int[numberOfInputs];
		Scanner keyboard = new Scanner(System.in);
		
		double value;
		for(int i = 0; i < numberOfInputs; i++) {
			while(true) {
				value = Double.parse(keyboard.next());
			}
		}
		
		return numbers;
	}
}
