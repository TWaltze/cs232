package hw3;

public class P464E67 {
	private int numberInRoom;
	private static int totalNumber;
	
	public void addOneToRoom() {
		this.numberInRoom++;
		totalNumber++;
	}
	
	public void removeOneToRoom() {
		if (this.numberInRoom - 1 >= 0) {
			this.numberInRoom--;
			totalNumber--;	
		}
	}
	
	public int getNumber() {
		return this.numberInRoom;
	}
	
	public int getTotal() {
		return totalNumber;
	}
}
